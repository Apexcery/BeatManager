<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeatManager_WPF_"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="BeatManager_WPF_.SplashScreen"
        mc:Ignorable="d"
        Title="SplashScreen" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Black">
    <Grid Background="#FF0C0C0C">
        
        <StackPanel x:Name="DirectoryPanel" Width="600" Height="400" Orientation="Vertical" Visibility="Hidden">
            <Label Content="Please select your Beat Saber Directory" HorizontalAlignment="Center" Margin="20,0,0,0"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Width="500" IsReadOnly="True" Foreground="Black" Background="White"></TextBox>
                <Grid Width="100">
                    <Rectangle Fill="CornflowerBlue"></Rectangle>
                    <TextBlock Text="FUCK YOU" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>
            
        </StackPanel>

    </Grid>
</Window>
